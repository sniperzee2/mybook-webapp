      <style>
       *{
    margin: 0;
    padding: 0;
    color: #fff;
    font-family: 'Poppins', sans-serif;
}

:root{
  --maincolor:#f9ca24;
}

html::-webkit-scrollbar{
  width:1rem;
}

html::-webkit-scrollbar-track{
  background:#080708;
}

html::-webkit-scrollbar-thumb{
  background:var(--maincolor);
}

section{
    height: 100vh;
    width: 100%;
}

.container{
    width: 100%;
    height: 100vh;
}

.nav-wrapper{
    width: 100%;
    display: flex;
    justify-content: space-between;
    position: absolute;
    top: 0;
    align-items: center;
    padding: 20px 0;
}

.nav-wrapper h3{
    color: #fff;
    font-family: 'Source Code Pro', monospace;
    margin-left: 30px;
}



.title{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    font-family: 'Chela One', cursive;
    font-size: 100px;
}

.images{
    width: 100%;
    height: 110%;
    position: relative;
    z-index: -1;
    top: -10%;
}

.image-wrapper{
    position: absolute;
    width: 100%;
    height: 100%;
    bottom: 0;
}

.image-wrapper img{
    width: 100%;
    height: 100%;
}

.blur {
    width: 120%;
    margin-left: -10%;
    height: 250px;
    background-color: #030000;
    position: absolute;
    bottom: -180px;
    filter: blur(40px);
    z-index: 999;
}



.content {
    height: 100%;
    width: 100%;
    background-color: #030000;
    z-index: 0;
    top: 100%;
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    background: url('css/pattern.jpg');
}

.content-wrapper{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.footer-wrapper{
    position: absolute;
    bottom: 40px;
    right: 50%;
}

.arrow {
  text-align: center;
  margin: 8% 0;
}
.bounce {
  -moz-animation: bounce 2s infinite;
  -webkit-animation: bounce 2s infinite;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-25px);
  }
  60% {
    transform: translateY(-15px);
  }
}


.card{
    color: white;
    /* width: auto; */
    width: 300px;
    border-radius: 10px;
    padding: 40px 30px;
    position: relative;
    background: rgba(248, 221, 221, 0.1);
    border-radius: 6px;
    overflow: hidden;
    z-index: 10;
    /* top: 100px; */
    backdrop-filter: blur(15px);
    border-top: 1px solid rgba(255,255,255,0.2);
    border-left: 1px solid rgba(255,255,255,0.2);
    box-shadow: 5px 10px 20px rgba(255, 255, 255, 0.1);
    margin-left: auto;
    margin-right: auto;
    /* top: 20vh; */
    align-items: center;
}

.card-content{
  display: flex;
  flex-direction: column;
  margin: 10px;
  align-items: center;
  text-align: center;
}
.card-content h3{
  font-size: 40px;
  padding-bottom: 7px;
  margin-bottom: 5px;
}

.lead{
    padding: 7px;
    margin-bottom: 12px;
    font-size: 20px;
}

.btn{
  background-color: darkred;
  margin: 12px;
  padding: 10px;
}

.btn a{
  text-decoration: none;
}

.btn:hover{
  transform: scale(1.02);
  background-color: black;
}

@media only screen and (max-width: 450px) {
    .card{
        padding: 20px;
        width: 200px;
    }
    .title{
      font-size: 50px;
    }
    .card-content h3{
        font-size: 30px;
    }

    .lead{
        font-size: 13px;
    }

    .btn{
        font-size: 9px;
    }
} 
 
