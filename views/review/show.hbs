<style>
    body {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
    background-image: url('/css/reviewback.jpg');
  }

  .container {
    flex: 1 0 auto;
  }
  .card{
    border-radius: 30px;
    background-image: url('/css/reviewcard.jpg');
  }
</style>

<h1 class="story center-align">Reviews</h1>

<div class="row">
    {{#each reviews}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-content center-align">
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/stories/user/{{user._id}}"> {{user.displayName}} </a>
                    </div>
                    <h5> {{stripTags ( truncate review 55)}}</h5>
                </div>
            </div>
        </div>
    {{else}}
        <h4>No Reviews Yet.......</h4>
        <h1><i class="far fa-sad-tear"></i></h1>
    {{/each}}
</div>